<section class="preferences-form">
    <header class="preferences-header">Preferences</header>
    <form method="post" action="/private/prefs" class="preferences-settings">
        <fieldset>
            <legend>Interface Strings</legend>
            <div class="form-group">
                <label for="postButton">Post button</label>
                <input type="text" id="postButton" name="strings.post" value="{{prefs.strings.post}}" required />
            </div>
        </fieldset>
        <fieldset id="emojis">
            <legend>Emoji Buttons</legend>
            {{#each prefs.icons as |icon key|}}
            <div class="emoji-setting">
                {{!-- <label for="icon-{{key}}">{{capitalize key}}</label> --}}
                <label for="icon-{{key}}">{{key}}</label>
                <input type="text" id="icon-{{key}}" size="2" maxlength="2" name="icons.{{key}}" value="{{icon}}"
                    required />
            </div>
            {{/each}}
            <button type="submit" class="update-button">Update Preferences</button>
        </fieldset>
    </form>

